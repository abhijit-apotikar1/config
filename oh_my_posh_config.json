{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title": true,
  "console_title_style": "template",
  "console_title_template": "{{if .Root}}(Admin){{end}} {{.Path}}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": false,
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#BF616A",
          "properties": {
            "prefix": "",
            "template": "{{ .UserName }}"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "#81A1C1",
          "properties": {
            "prefix": "<#00e420>[</>",
            "postfix": "<#00e420>] </>",
            "style": "folder"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#A3BE8C",
          "properties": {
            "style": "austin"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "#00E420",
          "foreground_templates": ["{{ if gt .Code 0 }}#BF616A{{ end }}"],
          "properties": {
            "template": "\u276f",
            "prefix": "",
            "always_enabled": true
          }
        }
      ]
    }
  ]
}